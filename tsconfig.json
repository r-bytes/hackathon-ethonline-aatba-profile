{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "src",
        "paths": {
            "@root/*": ["./*"],
            "@pages/*": ["app/pages/*"],
            "@components/*": ["app/components/*"],
            "@hooks/*": ["app/hooks/*"],
            "@assets/*": ["app/assets/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/profiles/(profile)/[profile]"],
    "exclude": ["node_modules"]
}
